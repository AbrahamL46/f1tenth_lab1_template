#!/usr/bin/env python3
import rclpy
from rclpy.node import Node
from ackermann_msgs.msg import AckermannDriveStamped

class PyTalker(Node):
    def __init__(self):
        super().__init__("py_talker")
        self.declare_parameter("v", 0.5)
        self.declare_parameter("d", 0.0)
        self.pub = self.create_publisher(AckermannDriveStamped, "drive", 10)
        self.create_timer(0.5, self.tick)

    def tick(self):
        msg = AckermannDriveStamped()
        msg.drive.speed = float(self.get_parameter("v").value)
        msg.drive.steering_angle = float(self.get_parameter("d").value)
        self.get_logger().info(f"Publishing speed={msg.drive.speed:.2f}, angle={msg.drive.steering_angle:.2f}")
        self.pub.publish(msg)

def main(): 
    rclpy.init()
    rclpy.spin(PyTalker())
    rclpy.shutdown()

if __name__ == "__main__":
    main()